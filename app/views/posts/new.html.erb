<% if @post.errors.any? %>
  <ul>
  <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<h1>Write a post</h1>

<%= form_for @post, html: { class: "form-horizontal" } do |f| %>
  <div class="control-group">
  <%= f.text_field :text, :size => 200, :placeholder => "Tell your story." %>
  </div>

  <ul>
  <% Tag.all.each do |tag| %>
    <div class="control-group">
      <!-- <div class="controls"> -->
        <li>
          <label class="checkbox">
          <%= check_box_tag "post[tag_ids][]", tag.id %>
          <%= label_tag tag.tag %>
          </label>
        </li>
      <!-- </div> -->
    </div>
  <% end %>
  </ul>

  <%= f.submit 'Post' %>

<% end %>