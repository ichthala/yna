<% if @post.errors.any? %>
  <ul>
  <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<h1>Write a post</h1>

<%= form_for @post do |f| %>
  <%= f.text_field :text, :placeholder => "Tell your story." %>

  <ul>
  <% Tag.all.each do |tag| %>
    <li>
      <%= check_box_tag "post[tag_ids][]", tag.id %>
      <%= label_tag tag.tag %>
    </li>
  <% end %>
  </ul>

  <%= f.submit 'Post' %>

<% end %>